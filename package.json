{
  "name": "pogo-leaderboard",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run i18n && next build",
    "commit": "git-cz",
    "dev": "next dev",
    "i18n": "npm run i18n:extract && npm run i18n:compile",
    "i18n:compile": "formatjs compile-folder --ast src/i18n/lang src/i18n/compiled-lang",
    "i18n:extract": "formatjs extract 'src/**/*.{js,ts,tsx}' --id-interpolation-pattern '[sha512:contenthash:base64:6]' --out-file src/i18n/lang/en.json",
    "lint": "next lint",
    "postinstall": "node-config-ts",
    "prepare": "husky install",
    "prettier": "prettier --write --ignore-unknown 'src/**/*'",
    "start": "next start"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "arrowParens": "always"
  },
  "engines": {
    "node": ">= 14"
  },
  "resolutions": {
    "@mui/styled-engine": "npm:@mui/styled-engine-sc@next"
  },
  "dependencies": {
    "@material-ui/core": "npm:@mui/material@5.0.0-rc.0",
    "@material-ui/styles": "npm:@mui/styles@5.0.0-rc.0",
    "@mui/material": "^5.0.0-rc.0",
    "@mui/styled-engine": "npm:@mui/styled-engine-sc@next",
    "@mui/styled-engine-sc": "^5.0.0-rc.0",
    "@mui/x-data-grid": "^4.0.0",
    "mysql2": "^2.3.0",
    "next": "11.1.2",
    "node-config-ts": "^3.1.0",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "react-intl": "^5.20.10",
    "styled-components": "^5.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@formatjs/cli": "^4.2.33",
    "@types/react": "17.0.19",
    "@types/styled-components": "^5.1.13",
    "babel-plugin-formatjs": "^10.3.8",
    "commitizen": "^4.2.4",
    "cz-conventional-commit": "^1.0.6",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "4.4.2"
  }
}
